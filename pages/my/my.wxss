.top {
  padding-top: 80rpx;
  background-color: #ffda44;
}

.imgCon {
  display: block;
  width: 160rpx;
  height: 160rpx;
  border-radius: 100%;
  overflow: hidden;
  background-color: #ccc;
  margin: 0 auto 20rpx;
}

.imgCon image {
  width: 100%;
  height: 100%;
}

.name {
  text-align: center;
  font-size: 32rpx;
  padding-bottom: 40rpx;
}

.rowCon {
  padding-left: 30rpx;
  background-color: #fff;
}

.row {
  position: relative;
  padding: 20rpx 0;
}
.row:active{
    background-color: #fafafa;
}
.row_l {
  float: left;
  width: 42rpx;
  height: 42rpx;
  margin-right: 42rpx;
}
.row_l image{
  width: 100%;
  height: 100%;
}
.row_text {
  font-size: 32rpx;
  color: #333;
  padding-left: 70rpx;
}
.row_text text{
    float: right;
    margin-right: 80rpx;
}

.arrows {
  position: absolute;
  right: 50rpx;
  top: 50%;
  width: 20rpx;
  height: 20rpx;
  border-width: 1rpx;
  border-color: #999 #999 transparent transparent;
  border-style: solid;
  -webkit-transform: rotate(45deg) translateY(-50%);
  transform: rotate(45deg) translateY(-50%);
}

.row_status {
  position: absolute;
  margin-left: 140rpx;
  top: 20%;
}

.instatus {
    border: 1px solid #29cc6d;
    border-radius: 2px;
    color: #29cc6d;
    display: inline-block;
    padding: 1px 2px;
    font-size: 12px;
    line-height: 16px;
    text-align: center;
}

.notstatus {
    border: 1px solid #f04705;
    border-radius: 2px;
    color: #f04705;
    display: inline-block;
    padding: 1px 2px;
    font-size: 12px;
    line-height: 16px;
    text-align: center;
}